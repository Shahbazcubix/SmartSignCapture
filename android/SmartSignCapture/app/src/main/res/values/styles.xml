<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="android:buttonStyle">@style/App_ButtonStyle</item>

        <!--<item name="android:background">@color/white_opaque</item>-->
        <!--<item name="android:windowBackground">@color/white_opaque</item>-->
        <!--<item name="android:colorBackground">@color/white_opaque</item>-->


        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:textColorHighlight">@color/text_color_hint</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_secondary</item>

        <item name="android:textColorHintInverse">@color/text_color_hint_inverse</item>
        <item name="android:textColorHighlightInverse">@color/text_color_hint_inverse</item>
        <item name="android:textColorPrimaryInverse">@color/text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/text_color_secondary_inverse</item>

        <item name="android:backgroundStacked">@color/highlight_color</item>

        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>

        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.Medium.Inverse</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.Small.Inverse</item>

        <item name="colorPrimary">@color/highlight_color</item>
        <item name="colorPrimaryDark">@color/pitch_black</item>
        <item name="colorAccent">@color/highlight_color</item>

        <item name="actionBarItemBackground">@drawable/selectable_background_ssc</item>
        <item name="popupMenuStyle">@style/PopupMenu.Ssc</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Ssc</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Ssc</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Ssc</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Ssc</item>
        <item name="actionModeBackground">@drawable/cab_background_top_ssc</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_ssc</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ssc</item>


        <item name="actionBarWidgetTheme">@style/Theme.Ssc.Widget</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <style name="FormLabel" parent="@android:style/Widget.TextView">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="App_ButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:color">@color/highlight_color</item>
        <item name="android:colorButtonNormal">@color/highlight_color</item>
        <item name="android:backgroundTint">@color/highlight_color</item>
        <item name="android:textColor">@color/text_color_primary_inverse</item>
    </style>

    <style name="ButtonStyleSecondary" parent="App_ButtonStyle">
        <item name="android:color">@color/highlight_color_secondary</item>
        <item name="android:colorButtonNormal">@color/highlight_color_secondary</item>
        <item name="android:backgroundTint">@color/highlight_color_secondary</item>
    </style>


    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">0dp</item>

    </style>

    <style name="TextAppearance.Medium.Inverse" parent="TextAppearance.Medium">
        <item name="android:textColor">@color/text_color_inverse</item>
    </style>

    <style name="TextAppearance.Small.Inverse" parent="TextAppearance.Small">
        <item name="android:textColor">@color/text_color_inverse</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Token">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/tag_background</item>

            <item name="android:paddingBottom">6dp</item>
            <item name="android:paddingLeft">6dp</item>
            <item name="android:paddingRight">6dp</item>
            <item name="android:paddingTop">6dp</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textSize">14sp</item>
    </style>

    <style name="MessageThreadBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="FAB.add" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_add_white_36dp</item>
    </style>

    <style name="FAB.ok" parent="FAB.add">
        <item name="android:src">@drawable/ic_done_white_36dp</item>
    </style>


    <style name="AppTheme.Without.Title" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBarWithoutTitle</item>

    </style>

    <style name="ActionBarWithoutTitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:displayOptions">useLogo</item>
    </style>

</resources>
